<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Back_Color1"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
            android:id="@+id/MeasurementsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Measurements"
            android:textColor="@color/Color2"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/measurementSpinnerLabel_TV"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/measurement_type"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/measurementSpinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MeasurementsText" />
        <Spinner
            android:id="@+id/measurementSpinner"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:background="@android:drawable/btn_dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/measurementSpinnerLabel_TV"
            app:layout_constraintTop_toTopOf="@id/measurementSpinnerLabel_TV"
            app:layout_constraintBottom_toBottomOf="@id/measurementSpinnerLabel_TV"/>
        <TextView
            android:id="@+id/genderSpinnerLabel_TV"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/select_gender"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/measurementSpinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/genderSpinner"
            app:layout_constraintBottom_toBottomOf="@id/genderSpinner"/>
        <Spinner
            android:id="@+id/genderSpinner"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:background="@android:drawable/btn_dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/genderSpinnerLabel_TV"
            app:layout_constraintTop_toBottomOf="@id/measurementSpinner"/>
        <TextView
            android:id="@+id/groupSpinnerLabel_TV"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/select_age_group"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/groupSpinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/groupSpinner"
            app:layout_constraintBottom_toBottomOf="@id/groupSpinner"/>
        <Spinner
            android:id="@+id/groupSpinner"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:background="@android:drawable/btn_dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/groupSpinnerLabel_TV"
            app:layout_constraintTop_toBottomOf="@id/genderSpinner"/>

        <ScrollView
            android:id="@+id/measurement_SV"
            android:layout_width="415dp"
            android:layout_height="350dp"
            android:background="@color/Color1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/groupSpinner"
            android:layout_marginBottom="100dp"
            android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ListGridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@color/Color1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical"
                    android:gravity="center">

                        <TextView
                            android:id="@+id/bustText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="@string/bust"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:id="@+id/bust_layout"
                            android:layout_width="371dp"
                            android:layout_height="44dp"
                            android:background="@color/white">
                                <EditText
                                    android:id="@+id/bust_ET"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:ems="10"
                                    android:inputType="numberDecimal"
                                    android:hint="@string/enter_bust_size"
                                    android:textAlignment="center"
                                    />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/waistText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="@string/waist"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:id="@+id/waist_layout"
                            android:layout_width="371dp"
                            android:layout_height="44dp"
                            android:background="@color/white">
                                <EditText
                                    android:id="@+id/waist_ET"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:ems="10"
                                    android:inputType="numberDecimal"
                                    android:hint="@string/enter_waist_size"
                                    android:textAlignment="center" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/hipText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="@string/hip"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:id="@+id/hip_layout"
                            android:layout_width="371dp"
                            android:layout_height="44dp"
                            android:background="@color/white">
                                <EditText
                                    android:id="@+id/hip_ET"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:ems="10"
                                    android:inputType="numberDecimal"
                                    android:hint="@string/enter_hip_size"
                                    android:textAlignment="center" />
                        </LinearLayout>
                </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/measurement_Submit_btn"
            android:layout_width="184dp"
            android:layout_height="54dp"
            android:text="@string/submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>