<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Back_Color1"
    tools:context=".BrandsViewFragment">

    <TextView
        android:id="@+id/title_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brands"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/subtitle_TV"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="@string/choose_brand"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_TV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.0"/>

    <ScrollView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_TV"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="95dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="0dp">

            <Button
                android:id="@+id/brand_btn1"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/Color1"
                android:text="Brand 1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Color2"
                app:layout_constraintEnd_toEndOf="@+id/brand_btn2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.0" />

            <Button
                android:id="@+id/brand_btn2"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/Color2"
                android:text="Brand 2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Color3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/brand_btn1"
                app:layout_constraintTop_toTopOf="@+id/brand_btn1" />

            <Button
                android:id="@+id/brand_btn3"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/Color3"
                android:text="Brand 3"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/brand_btn1"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="@+id/brand_btn1"
                app:layout_constraintTop_toBottomOf="@+id/brand_btn1" />

            <Button
                android:id="@+id/brand_btn4"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/Color1"
                android:text="Brand 4"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Color2"
                app:layout_constraintEnd_toEndOf="@+id/brand_btn2"
                app:layout_constraintHorizontal_bias="0.92"
                app:layout_constraintStart_toStartOf="@+id/brand_btn2"
                app:layout_constraintTop_toTopOf="@+id/brand_btn3" />

            <Button
                android:id="@+id/brand_btn5"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/Color2"
                android:text="Brand 5"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Color3"
                app:layout_constraintEnd_toEndOf="@+id/brand_btn3"
                app:layout_constraintStart_toStartOf="@+id/brand_btn3"
                app:layout_constraintTop_toBottomOf="@+id/brand_btn3" />

            <Button
                android:id="@+id/brand_btn6"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/Color3"
                android:text="Brand 6"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/brand_btn4"
                app:layout_constraintStart_toStartOf="@+id/brand_btn4"
                app:layout_constraintTop_toTopOf="@+id/brand_btn5" />

            <Button
                android:id="@+id/brand_btn7"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/Color1"
                android:text="Brand 7"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Color2"
                app:layout_constraintEnd_toEndOf="@+id/brand_btn5"
                app:layout_constraintStart_toStartOf="@+id/brand_btn5"
                app:layout_constraintTop_toBottomOf="@+id/brand_btn5" />

            <Button
                android:id="@+id/brand_btn8"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/Color2"
                android:text="Brand 8"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Color3"
                app:layout_constraintEnd_toEndOf="@+id/brand_btn6"
                app:layout_constraintStart_toStartOf="@+id/brand_btn6"
                app:layout_constraintTop_toTopOf="@+id/brand_btn7" />

            <Button
                android:id="@+id/brand_btn9"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/Color3"
                android:text="Brand 9"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/brand_btn7"
                app:layout_constraintStart_toStartOf="@+id/brand_btn7"
                app:layout_constraintTop_toBottomOf="@+id/brand_btn7" />

            <Button
                android:id="@+id/brand_btn10"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/Color1"
                android:text="Brand 10"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Color2"
                app:layout_constraintEnd_toEndOf="@+id/brand_btn8"
                app:layout_constraintStart_toStartOf="@+id/brand_btn8"
                app:layout_constraintTop_toTopOf="@+id/brand_btn9" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>